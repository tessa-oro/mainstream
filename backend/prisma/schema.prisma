generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user String @id
  password String
  playlist Song[]
}

model Song {
  id Int @id @default(autoincrement())
  title String
  artist String
  player String
  ratings Int[]
  playlistUser User @relation(fields: [userID], references:[user], onDelete: Cascade)
  userID String
}
